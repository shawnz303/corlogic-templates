<body>
<div class="wrapper">

	<section class="section-form">
		<div class="section__inner">
			<div class="box">
				<div class="box__body">
					<div class="box__content">
						<div class="box__head">
							<i class="ico-arrow"></i>
						</div><!-- /.box__head -->

						<div class="box__form">
							<div class="form-login">
								<form action="?" method="post">
									<div class="form__inner">
										<div class="form__head">
											<h2>Sign In</h2>
										</div><!-- /.form__head -->

										<form class="form__body" method="POST" action="{{ url('login') }}">
											{% csrf_token %}

											{% if next %}
												<input type="hidden" name="next" value="{{ next }}" />
											{% endif %}

											<div class="form__row">
												<div class="form__label">
													<label for="mail">Login</label>
												</div><!-- /.form__label -->

												<div class="form__controls">
													<input
														type="text"
														class="field"
														id="username"
														name="username"
														placeholder=""
														value
													>
												</div><!-- /.form__controls -->
											</div><!-- /.form__row -->

											<div class="form__row">
												<div class="form__label">
													<label for="password">Password</label>
												</div><!-- /.form__label -->

												<div class="form__controls">
													<input
														type="password"
														class="field password-show"
														placeholder="Password"
														id="password"
														name="password"
													>
													<a href="#" class="btn-show">SHOW</a>
												</div><!-- /.form__controls -->
											</div><!-- /.form__row -->
										</form><!-- /.form__body -->

										<div class="form__actions">
											<button type="submit" class="btn btn--green btn-block">Sign In</button>
										</div><!-- /.form__actions -->

										<div class="form__foot">
										</div><!-- /.form__foot -->
									</div><!-- /.form__inner -->
								</form>
							</div><!-- /.form-login -->
						</div><!-- /.box__form -->
					</div><!-- /.box__content -->

					<div class="box__image" style="background-image: url(
							{{ static('images/temp/Login-screen-image.png') }});" >
						<h2>Welcome to Corlogic</h2>

						<p>Easily interpret and displays pacemaker and defibrillator patient data saving you time to focus on your patients.</p>
					</div><!-- /.box__image -->
				</div><!-- /.box__body -->
			</div><!-- /.box -->
		</div><!-- /.section__inner -->
	</section><!-- /.section-form -->
